{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["ES6"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
